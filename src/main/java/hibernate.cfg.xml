<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
        <property name="connection.url">jdbc:derby://localhost/AMnichJPAPractice</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>
        <mapping class="entities.Product"></mapping>
        <mapping class="entities.Supplier"></mapping>
        <mapping class="entities.transaction.Transact"></mapping>
        <mapping class="entities.Customer"></mapping>
        <mapping class="entities.transaction.ProductTransact"></mapping>
    </session-factory>
</hibernate-configuration>